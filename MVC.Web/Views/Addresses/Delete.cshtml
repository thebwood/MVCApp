@model MVC.Web.Models.AddressDto

@{
    ViewData["Title"] = "Delete Address";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index">Addresses</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Delete</li>
                    </ol>
                </nav>
                <h1 class="fw-bold mb-1 text-danger">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Address
                </h1>
                <p class="text-muted">Are you sure you want to delete this address? This action cannot be undone.</p>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="alert alert-warning border-0 mb-4" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <strong>Warning:</strong> This will permanently delete the address from your records.
                    </div>

                    <div class="bg-light rounded p-4 mb-4">
                        <dl class="row mb-0">
                            <dt class="col-sm-4 text-muted mb-3">
                                <i class="bi bi-signpost me-2"></i>Street
                            </dt>
                            <dd class="col-sm-8 fw-semibold mb-3">@Model.Street</dd>
                            
                            <dt class="col-sm-4 text-muted mb-3">
                                <i class="bi bi-building me-2"></i>City
                            </dt>
                            <dd class="col-sm-8 fw-semibold mb-3">@Model.City</dd>
                            
                            <dt class="col-sm-4 text-muted mb-3">
                                <i class="bi bi-map me-2"></i>State
                            </dt>
                            <dd class="col-sm-8 fw-semibold mb-3">@Model.State</dd>
                            
                            <dt class="col-sm-4 text-muted mb-3">
                                <i class="bi bi-mailbox me-2"></i>Zip Code
                            </dt>
                            <dd class="col-sm-8 mb-3">
                                <span class="badge bg-secondary">@Model.ZipCode</span>
                            </dd>
                            
                            <dt class="col-sm-4 text-muted mb-0">
                                <i class="bi bi-globe me-2"></i>Country
                            </dt>
                            <dd class="col-sm-8 fw-semibold mb-0">@Model.Country</dd>
                        </dl>
                    </div>
                    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-lg btn-light">
                                <i class="bi bi-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-lg btn-danger">
                                <i class="bi bi-trash me-2"></i>Delete Address
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
